@page
@model ServiceHost.Areas.Administration.Pages.Inventory.LogModel
@{
    ViewData["Title"] = " گردش انبار";
}
<!-- Content -->
<!--Search-->
<div class="container-xxl  cls-sj-saf---content-search-box">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-dark alert-dismissible mb-0" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>
<!--/Search-->
<div class="container-xxl flex-grow-1  cls-sj-saf---content-Table-box">
    <!-- Bootstrap Table with Header - Dark -->
    <div class="card">
        <div id="card-bar" class="row">
            <div id="card-bar-right" class="col-sm-6">
                <h5 class="card-header">گردش موجودی انبار </h5>
            </div>
            <div id="card-bar-left" class="col-sm-6">
                <a class="btn btn-success" asp-page="./Index">بستن</a>
            </div>
        </div>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="text-center">
                <tr>
                    <th>#</th>
                    <th> نوع عملیات</th>
                    <th> تعداد</th>
                    <th>اقدام کننده</th>
                    <th>تاریخ عملیات</th>
                    <th>تعداد فعلی</th>
                    <th>شماره سفارش</th>
                    <th>توضیحات</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0 text-center">
                @foreach (var item in Model.InventoryOperation)
                {
                    <tr>
                        <td class="persianNumber"><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Id</strong></td>
                        <td>
                            @if (item.Operation)
                            {
                                <i class="bx bx-plus text-success"></i>
                            }
                            else
                            {
                                <i class="bx bx-minus text-danger"></i>
                            }
                        </td>
                        <td class="persianNumber">@item.Count</td>
                        <td class="persianNumber">@item.Operator</td>
                        <td class="persianNumber">@item.OperationDate</td>
                        <td class="persianNumber">@item.CurrentCount</td>
                        <td class="persianNumber">@item.OrderId</td>
                        <td class="persianNumber">@item.Description</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
<!--/ Bootstrap Table with Header Dark -->
<!-- / Content -->

@page
@model ServiceHost.Areas.Administration.Pages.Shop.Postages.CreateModel
@{
    ViewData["Title"] = "ایجاد هزینه ارسال پستی";
}

<div class="container-xxl flex-grow-1 container-p-y">
    @if (ViewData["Message"] != null)
    {
        <div class="alert alert-danger alert-dismissible mb-0" role="alert">
            @ViewData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="row">
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">ایجاد هزینه ارسال پستی</h5>
                </div>
                <div class="card-body">
                    <form asp-page="/Create"
                          method="post">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.PostagePrice" class="control-label">هزینه</label>
                                    <input type="text" class="form-control persianNumber" asp-for="Command.PostagePrice"/>
                                    <span asp-validation-for="Command.PostagePrice" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            بازگشت
                        </a>
                        <button type="submit" class="btn btn-primary">ایجاد</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@page
@model ServiceHost.Areas.Administration.Pages.Shop.ContactUs.IndexModel
@{
    ViewData["Title"] = "ارتباط با ما";
}
<!-- Content -->
<!--Search-->
<div class="container-xxl  cls-sj-saf---content-search-box">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-dark alert-dismissible mb-0" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>
<!--/Search-->
<div class="container-xxl flex-grow-1  cls-sj-saf---content-Table-box">
    <!-- Bootstrap Table with Header - Dark -->
    <div class="card">
        <div id="card-bar" class="row">
            <div id="card-bar-right" class="col-sm-6">
                <h5 class="card-header">ارتباط با ما</h5>
            </div>
            @* <div id="card-bar-left" class="col-sm-6">
                <a class="btn btn-success" asp-page="./Create">اضافه کردن +</a>
            </div> *@
        </div>
    </div>


    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-dark text-center">
                <tr>
                    <th>#</th>
                    <th>موبایل</th>
                    <th>ایمیل</th>
                    <th>اکانت اینیستاگرام</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0 text-center">
                @foreach (var item in Model.ContactUsList)
                {
                    <tr>
                        <td class="persianNumber"><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Id</strong></td>
                        <td class="persianNumber">@item.Mobile</td>
                        <td>@item.Email</td>
                        <td>@item.InstagramAccount</td>
                        <td>
                            <a class="btn btn-warning pull-right m-rl-5"
                               asp-page="./Edit" asp-route-id="@item.Id">
                                <i class="fa fa-edit"></i> ویرایش
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
<!--/ Bootstrap Table with Header Dark -->
<!-- / Content -->

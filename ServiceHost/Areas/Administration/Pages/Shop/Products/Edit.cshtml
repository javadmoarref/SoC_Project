@page
@model ServiceHost.Areas.Administration.Pages.Shop.Products.EditModel
@{
    ViewData["Title"] = "ویرایش گروه محصول";
}
<div class="container-xxl flex-grow-1 container-p-y">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger alert-dismissible mb-0" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="row">
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">ویرایش محصول : @Model.Command.Name</h5>
                </div>
                <div class="card-body">
                    <form asp-page="/Edit"
                          method="post">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.Name" class="control-label">نام</label>
                                    <input type="text" id="Name" class="form-control" asp-for="Command.Name"/>
                                    <span asp-validation-for="Command.Name" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.Code" class="control-label">کد</label>
                                    <input type="text" class="form-control" asp-for="Command.Code" />
                                    <span asp-validation-for="Command.Code" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.UnitPrice" class="control-label">قیمت</label>
                                    <input type="text" class="form-control persianNumber" asp-for="Command.UnitPrice">
                                    <span asp-validation-for="Command.UnitPrice" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.CategoryId" class="control-label">گروه محصول</label>
                                    <select id="selectTypeOpt" class="form-select color-dropdown" asp-for="Command.CategoryId"
                                            asp-items="Model.ProductCategories">
                                        <option value="0">...</option>
                                    </select>
                                    <span asp-validation-for="Command.CategoryId" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label asp-for="Command.Picture" class="control-label">عکس</label>
                                    <input type="text" class="form-control" asp-for="Command.Picture"/>
                                    <span asp-validation-for="Command.Picture" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label asp-for="Command.BackgroundColor" class="control-label">رنگ زمینه عکس</label>
                                    <input type="color" class="form-control form-control-color form-control-plaintext" asp-for="Command.BackgroundColor">
                                    <span asp-validation-for="Command.BackgroundColor" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.PictureAlt" class="control-label">Alt</label>
                                    <input type="text" class="form-control" asp-for="Command.PictureAlt">
                                    <span asp-validation-for="Command.PictureAlt" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.PictureTitle" class="control-label">Title</label>
                                    <input type="text" class="form-control" asp-for="Command.PictureTitle">
                                    <span asp-validation-for="Command.PictureTitle" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Command.Description" class="control-label">توضیحات</label>
                                    <textarea type="text" class="form-control" asp-for="Command.Description"></textarea>
                                    <span asp-validation-for="Command.Description" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Command.ShortDescription" class="control-label">توضیحات کوتاه</label>
                                    <textarea type="text" id="ShortDescription" class="form-control" asp-for="Command.ShortDescription" onchange="fillField('ShortDescription','MetaDescription')"></textarea>
                                    <span asp-validation-for="Command.ShortDescription" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.Slug" class="control-label">اسلاگ</label>
                                    <input type="text" id="Slug" class="form-control" readonly asp-for="Command.Slug">
                                    <span asp-validation-for="Command.Slug" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.Keywords" class="control-label">کلمات کلیدی</label>
                                    <input type="text" class="form-control" asp-for="Command.Keywords">
                                    <span asp-validation-for="Command.Keywords" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Command.MetaDescription" class="control-label">توضیحات متا</label>
                                    <textarea type="text" id="MetaDescription" class="form-control" readonly asp-for="Command.MetaDescription"></textarea>
                                    <span asp-validation-for="Command.MetaDescription" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" asp-for="Command.Id" value="@Model.Command.Id"/>
                        <a type="button" asp-page="./Index" class="btn btn-outline-secondary">
                            بازگشت
                        </a>
                        <button type="submit" class="btn btn-primary">ویرایش</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



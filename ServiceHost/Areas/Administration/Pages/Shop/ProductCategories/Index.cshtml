@page
@model ServiceHost.Areas.Administration.Pages.Shop.ProductCategories.IndexModel
@{
    ViewData["Title"] = "مدیریت گروه محصولات";
}
<!-- Content -->
<!--Search-->
<div class="container-xxl  cls-sj-saf---content-search-box">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-dark alert-dismissible mb-0" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="card mb-2">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">جستجو در گروه محصولات</h5>
            @*<small class="text-muted float-end">Default label</small>*@
        </div>
        <div class="card-body">
            <form method="get">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="SearchModel.Name" class="control-label">نام گروه محصول</label>
                            <input type="text" class="form-control" asp-for="SearchModel.Name" placeholder="نام گروه محصول">
                        </div>
                    </div>
                </div>
                <div class="row justify-content-end">
                    <div class="col-sm-11">
                        <button type="submit" class="btn btn-success">جستجو</button>
                        <a class="btn btn-primary" asp-page="./Index">مشاهده همه</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
<!--/Search-->
<div class="container-xxl flex-grow-1  cls-sj-saf---content-Table-box">
    <!-- Bootstrap Table with Header - Dark -->
    <div class="card">
        <div id="card-bar" class="row">
            <div id="card-bar-right" class="col-sm-6">
                <h5 class="card-header">لیست گروه محصول</h5>
            </div>
            <div id="card-bar-left" class="col-sm-6">
                <a class="btn btn-success" asp-page="./Create">اضافه کردن +</a>
            </div>
        </div>
    </div>


    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-dark text-center">
                <tr>
                    <th>#</th>
                    <th>عکس</th>
                    <th> رنگ زمینه عکس</th>
                    <th>نام</th>
                    <th>تاریخ ایجاد</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0 text-center">
                @foreach (var item in Model.ProductCategories)
                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Id</strong></td>
                        <td><img src="@item.Picture" style="width: 70px;height: 70px" /></td>
                        <td class="cell-fit">
                            <input type="color" class="form-control form-control-color form-control-plaintext" disabled value="@item.BackgroundColor" />
                        </td>
                        <td>@item.Name</td>
                        <td>@item.CreationDate</td>
                        <td>
                            <a class="btn btn-warning pull-right m-rl-5"
                           asp-page="./Edit" asp-route-id="@item.Id">
                                <i class="fa fa-edit"></i> ویرایش
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
<!--/ Bootstrap Table with Header Dark -->
<!-- / Content -->

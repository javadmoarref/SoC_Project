@page
@model ServiceHost.Areas.Administration.Pages.Accounts.Account.EditModel
@{
    ViewData["Title"] = "ویرایش کاربر";
}
<div class="container-xxl flex-grow-1 container-p-y">
    @if (ViewData["Message"] != null)
    {
        <div class="alert alert-danger alert-dismissible mb-0" role="alert">
            @ViewData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="row">
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">ویرایش کاربر</h5>
                </div>
                <div class="card-body">
                    <form asp-page="/Edit"
                          method="post"
                          enctype="multipart/form-data">
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Command.Fullname" class="control-label">نام</label>
                                    <input type="text" id="Name" class="form-control" asp-for="Command.Fullname" />
                                    <span asp-validation-for="Command.Fullname" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Command.Mobile" class="control-label">موبایل</label>
                                    <input type="text" class="form-control" asp-for="Command.Mobile">
                                    <span asp-validation-for="Command.Mobile" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Command.RoleId" class="control-label">نقش</label>
                                    <select id="selectTypeOpt" class="form-select color-dropdown" asp-for="Command.RoleId"
                                            asp-items="Model.Roles">
                                        <option value="0">...</option>
                                    </select>
                                    <span asp-validation-for="Command.RoleId" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Command.ProfilePhoto" class="control-label">عکس</label>
                                    <input type="file" class="form-control" asp-for="Command.ProfilePhoto" accept="image/*" />
                                    <span asp-validation-for="Command.ProfilePhoto" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Command.PostalCode" class="control-label"> کد پستی</label>
                                    <input type="text" class="form-control" asp-for="Command.PostalCode">
                                    <span asp-validation-for="Command.PostalCode" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="form-group">
                                    <label asp-for="Command.Address" class="control-label">آدرس</label>
                                    <input type="text" class="form-control" asp-for="Command.Address">
                                    <span asp-validation-for="Command.Address" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" asp-for="Command.Id" value="@Model.Command.Id"/>
                        <a type="button" asp-page="./Index" class="btn btn-outline-secondary">
                            بازگشت
                        </a>
                        <button type="submit" class="btn btn-primary">ویرایش</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



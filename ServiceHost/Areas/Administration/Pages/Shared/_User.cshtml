@inject _0_Framework.Application.IAuthHelper Auth
@{
    var currentAccount = Auth.CurrentAccountInfo();
}

<li class="nav-item navbar-dropdown dropdown-user dropdown">
    <a class="nav-link dropdown-toggle hide-arrow" href="javascript:void(0);" data-bs-toggle="dropdown">
        <div class="avatar avatar-online">
            @if (string.IsNullOrWhiteSpace(currentAccount.ProfilePhoto))
            {
                <img src="~/AdminTheme/assets/img/icons/icon/userIcon.png" alt="" class="w-px-40 h-auto rounded-circle" />
            }
            else
            {
                <img src="~/uploads/@currentAccount.ProfilePhoto" alt="" class="w-px-35 rounded-circle" />
            }
        </div>
    </a>
    <ul class="dropdown-menu ">
        <li id="li-avatar">
            <a class="dropdown-item" href="#">
                <div class="d-flex">
                    <div class="flex-shrink-0 " id="div-avatar">
                        <div class="avatar avatar-online">
                            @if (string.IsNullOrWhiteSpace(currentAccount.ProfilePhoto))
                            {  
                                <img src="~/AdminTheme/assets/img/icons/icon/userIcon.png" alt="" class="w-px-40 h-auto rounded-circle" />
                            }
                            else
                            {
                                <img src="~/uploads/@currentAccount.ProfilePhoto" alt="" class="w-px-35  rounded-circle" />
                            }
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <span class="fw-semibold d-block">@currentAccount.Fullname</span>
                        <small class="text-muted">@currentAccount.Role</small>
                    </div>
                </div>
            </a>
        </li>
        <li>
            <div class="dropdown-divider"></div>
        </li>

@page "{id}"
@model ServiceHost.Pages.ArticleCategoryModel
@{
}
<main class="main-content">

    <!--== Start Page Header Area Wrapper ==-->
    <nav aria-label="breadcrumb" class="breadcrumb-style1 mb-10">
        <div class="container">
            <ol class="breadcrumb justify-content-center">
                <li class="breadcrumb-item"><a asp-page="/Index">صفحه اصلی</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.ArticleCategoryWithArticles.Name</li>
            </ol>
        </div>
    </nav>

    <!--== Start Blog Area Wrapper ==-->
    <section class="section-space pt-0">
        <div class="container">
            <div class="row justify-content-between flex-xl-row-reverse">
                <div class="col-xl-8">
                    <div class="row">
                        @foreach (var article in Model.ArticleCategoryWithArticles.Articles)
                        {
                            <div class="col-sm-6 col-lg-4 col-xl-6 mb-8">
                                <!--== Start Blog Item ==-->
                                <div class="post-item">
                                    <a asp-page="/Article" asp-route-id="@article.Slug" class="thumb">
                                        <img src="~/uploads/@article.Picture" width="370" height="320" alt="@article.PictureAlt" title="@article.PictureTitle">
                                    </a>
                                    <div class="content">
                                        <a class="post-category" asp-page="/ArticleCategory" asp-route-id="@article.CategorySlug">@article.CategoryName</a>
                                        <h4 class="title"><a asp-page="/Article" asp-route-id="@article.Slug">@article.Title</a></h4>
                                        <ul class="meta">
                                            @* <li class="author-info"><span>توسط:</span> <a href="blog.html">توماس دی مومن</a></li> *@
                                            <li class="post-date">@article.PublishDate</li>
                                        </ul>
                                    </div>
                                </div>
                                <!--== End Blog Item ==-->
                            </div>
                        }
                       @*  <div class="col-12">
                            <ul class="pagination justify-content-center me-auto ms-auto mt-7 mb-8 mb-xl-0">
                                <li class="page-item">
                                    <a class="page-link next" href="product.html" aria-label="Next">
                                        <span class="fa fa-chevron-right" aria-hidden="true"></span>
                                    </a>
                                </li>
                                <li class="page-item"><a class="page-link" href="product.html">01</a></li>
                                <li class="page-item"><a class="page-link" href="product.html">02</a></li>
                                <li class="page-item"><a class="page-link" href="product.html">03</a></li>
                                <li class="page-item"><a class="page-link" href="product.html">....</a></li>
                                <li class="page-item">

                                    <a class="page-link previous" href="product.html" aria-label="Previous">
                                        <span class="fa fa-chevron-left" aria-hidden="true"></span>
                                    </a>
                                </li>
                            </ul>
                        </div> *@
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="blog-sidebar-widget">
                        <div class="blog-search-widget">
                            <form action="#">
                                <input type="search" placeholder="اینجا جستجو کنید">
                                <button type="submit"><i class="fa fa-search"></i></button>
                            </form>
                        </div>
                        <div class="blog-widget">
                            <h4 class="blog-widget-title">گروه مقالات</h4>
                            <ul class="blog-widget-category">
                                @foreach (var category in Model.ArticleCategories)
                                {
                                    <li><a asp-page="./ArticleCategory" asp-route-id="@category.Slug">@category.Name <span>@category.ArticlesCount</span></a></li>
                                }
                            </ul>
                        </div>
                        <div class="blog-widget">
                            <h4 class="blog-widget-title">پستهای اخیر</h4>
                            <div class="blog-widget-post">
                                @foreach (var article in Model.LatestArticle)
                                {
                                    <div class="blog-widget-single-post">
                                        <a asp-page="/Article" asp-route-id="@article.Slug">
                                            <img src="~/uploads/@article.Picture" width="75" height="78" alt="@article.PictureAlt" title="@article.PictureTitle">
                                            <span class="title">@article.Title</span>
                                        </a>
                                        <span class="date">@article.PublishDate</span>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="blog-widget mb-0">
                            <h4 class="blog-widget-title">تگ ها</h4>
                            <ul class="blog-widget-tags">
                                @foreach (var tag in Model.ArticleCategoryWithArticles.KeywordList)
                                {
                                        <li><a asp-page="/Search" asp-route-value="@tag">@tag</a></li>
                                }
                                
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--== End Blog Area Wrapper ==-->
    <!--== Start News Letter Area Wrapper ==-->
    <section class="section-space pt-0">
        <div class="container">
            <div class="newsletter-content-wrap" data-bg-img="/Theme/files/images/photos/bg1.webp">
                <div class="newsletter-content">
                    <div class="section-title mb-0">
                        <h2 class="title">به ما بپیوند</h2>
                        <p>برای خانم‌ها و آقایانی که قصد خرید محصولاتی عالی و اصلی را دارند و می‌خواهند درباره چیزی که می‌خرند اطلاعات کامل و واقعی داشته باشند</p>
                    </div>
                </div>
                <div class="newsletter-form">
                    <form>
                        <input type="email" class="form-control" placeholder="ایمیل خود را وارد کنید">
                        <button class="btn-submit" type="submit"><i class="fa fa-paper-plane"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!--== End News Letter Area Wrapper ==-->

</main>
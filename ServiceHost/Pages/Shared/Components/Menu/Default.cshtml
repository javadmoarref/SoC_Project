@using _0_Framework.Application
@using Microsoft.EntityFrameworkCore.Query.Internal
@model _01_SogandShopQuery.Model.MenuModel
@inject IAuthHelper Auth

<header class="header-area sticky-header bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-5 col-lg-2">
                <div class="header-logo">
                    <a asp-page="/Index">
                        <img class="logo-main" src="~/Theme/files/images/slider/butterfly-logo.png" width="500" height="500" alt="Logo" />
                    </a>
                </div>
            </div>
            <div class="col-lg-7 col-xl-7 d-none d-lg-block">
                <div class="header-navigation ps-7">
                    <ul class="main-nav justify-content-start">
                        <li class="has-submenu">
                            <a asp-page="./Index">صفحه اصلی</a>
                        </li>
                        <li class="has-submenu">
                            <a>فروشگاه</a>
                            <ul class="submenu-nav">
                                @foreach (var category in Model.ProductCategories)
                                {
                                    <li><a asp-page="./ProductCategory" asp-route-id="@category.Slug">@category.Name</a></li>
                                }
                            </ul>
                        </li>
                        <li class="has-submenu">
                            <a>وبلاگ</a>
                            <ul class="submenu-nav">
                                @foreach (var category in Model.ArticleCategories)
                                {
                                    <li><a asp-page="./ArticleCategory" asp-route-id="@category.Slug">@category.Name</a></li>
                                }
                            </ul>
                        </li>
                        <li><a href="about-us.html">درباره ما</a></li>
                        <li><a href="contact.html">ارتباط با ما</a></li>
                        <li><a asp-area="Administration" asp-page="/Index">داشبورد مدیریت</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-7 col-lg-3">
                <div class="header-action justify-content-end">
                    <button class="header-action-btn ms-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#AsideOffcanvasSearch" aria-controls="AsideOffcanvasSearch">
                        <span class="icon">
                            <svg width="30" height="30" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                <rect class="icon-rect" width="30" height="30" fill="url(#pattern1)" />
                                <defs>
                                    <pattern id="pattern1" patternContentUnits="objectBoundingBox" width="1" height="1">
                                        <use xlink:href="#image0_504:11" transform="scale(0.0333333)" />
                                    </pattern>
                                    <image id="image0_504:11" width="30" height="30" xlink:href="data:image/png;base64," />
                                </defs>
                            </svg>
                        </span>
                    </button>

                    <button class="header-action-btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#AsideOffcanvasCart" aria-controls="AsideOffcanvasCart">
                        <span class="icon">
                            <svg width="30" height="30" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                <rect class="icon-rect" width="30" height="30" fill="url(#pattern2)" />
                                <defs>
                                    <pattern id="pattern2" patternContentUnits="objectBoundingBox" width="1" height="1">
                                        <use xlink:href="#image0_504:9" transform="scale(0.0333333)" />
                                    </pattern>
                                    <image id="image0_504:9" width="30" height="30" xlink:href="data:image/png;base64," />
                                </defs>
                            </svg>
                        </span>
                    </button>
                    @if (!Auth.IsAuthenticated())
                    {
                        <a class="header-action-btn" asp-page="./Account">
                            <span class="icon">
                                <svg width="30" height="30" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                    <rect class="icon-rect" width="30" height="30" fill="url(#pattern3)" />
                                    <defs>
                                        <pattern id="pattern3" patternContentUnits="objectBoundingBox" width="1" height="1">
                                            <use xlink:href="#image0_504:10" transform="scale(0.0333333)" />
                                        </pattern>
                                        <image id="image0_504:10" width="30" height="30" xlink:href="data:image/png;base64," />
                                    </defs>
                                </svg>
                            </span>
                        </a>
                    }
                    else
                    {
                        <a class="header-action-btn" asp-page="./Account" asp-page-handler="Logout">
                            <span class="icon">
                                <img src="~/Theme/files/images/icons/logout.png" width="30" height="30"/>
                            </span>
                        </a>
                    }

                    <button class="header-menu-btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#AsideOffcanvasMenu" aria-controls="AsideOffcanvasMenu">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</header>
<!--== Start Aside Menu ==-->
<aside class="off-canvas-wrapper offcanvas offcanvas-start" tabindex="-1" id="AsideOffcanvasMenu" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header">
       @* <h1 class="d-none" id="offcanvasExampleLabel">منوی کنار</h1>*@
        <button class="btn-menu-close" data-bs-dismiss="offcanvas" aria-label="Close">Sogand -  آرایش و زیبایی <i class="fa fa-chevron-left"></i></button>
    </div>
    <div class="offcanvas-body">
        <div id="offcanvasNav" class="offcanvas-menu-nav">
            <ul>
                <li class="offcanvas-nav-parent">
                    <a class="offcanvas-nav-item" asp-page="./Index">صفحه اصلی</a>
                </li>
                <li class="offcanvas-nav-parent">
                    <a class="offcanvas-nav-item">فروشگاه</a>
                    <ul>
                        @foreach (var category in Model.ProductCategories)
                        {
                            <li><a asp-page="./ProductCategory" asp-route-id="@category.Slug">@category.Name</a></li>
                        }
                    </ul>
                </li>
                <li class="offcanvas-nav-parent">
                    <a class="offcanvas-nav-item" href="#">وبلاگ</a>
                    <ul>
                        @foreach (var category in Model.ArticleCategories)
                        {
                            <li><a asp-page="./ArticleCategory" asp-route-id="@category.Slug">@category.Name</a></li>
                        }
                    </ul>
                </li>
                <li class="offcanvas-nav-parent"><a class="offcanvas-nav-item" href="about-us.html">در باره ما</a></li>
                <li class="offcanvas-nav-parent"><a class="offcanvas-nav-item" href="contact.html">ارتباط با ما</a></li>
                <li class="offcanvas-nav-parent"><a class="offcanvas-nav-item" asp-area="Administration" asp-page="/Index">داشبورد مدیریت</a></li>
            </ul>
        </div>

    </div>
</aside>
<!--== End Aside Menu ==-->
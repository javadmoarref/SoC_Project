@model _01_SogandShopQuery.Contracts.Product.ProductQueryModel
<div class="modal-body">
    <div class="product-action-view-content">
        <button type="button" class="btn-close" data-bs-dismiss="modal">
            <i class="fa fa-times"></i>
        </button>
        <div class="modal-action-messages mt-3">
            @*<i class="fa fa-check-square-o"></i>*@
            با موفقیت به لیست علاقه مندی ها اضافه شد!
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id"/>
        <div class="modal-action-product">
            <div class="thumb"  style="background-color:@Model.BackgroundColor">
                <img src="@Model.Picture"  width="466" height="320" alt="@Model.PictureAlt" title="@Model.PictureTitle">
            </div>
            <h4 class="product-name"><a href="product-details.html">محتوای قابل خواندن </a></h4>
        </div>
    </div>
</div>

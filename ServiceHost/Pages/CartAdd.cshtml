@model _01_SogandShopQuery.Contracts.Product.ProductQueryModel
<div class="modal-body">
    <div class="product-action-view-content">
        <button type="button" class="btn-close" data-bs-dismiss="modal">
            <i class="fa fa-times"></i>
        </button>
        <div class="modal-action-messages mt-3">
            @*<i class="fa fa-check-square-o"></i>*@
            با موفقیت به سبد خرید اضافه شد!
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="modal-action-product">
            <div class="thumb" style="background-color:@Model.BackgroundColor">
                <img src="~/uploads/@Model.Picture" width="466" height="320" alt="@Model.PictureAlt" title="@Model.PictureTitle" data-bs-dismiss="modal">
            </div>
            <h4 class="product-name"><a asp-page="./ProductDetails" asp-route-id="@Model.Slug">مشاهده محصول</a></h4>
        </div>
    </div>
</div>
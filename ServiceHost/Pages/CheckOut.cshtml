@page
@using _0_Framework.Application
@model ServiceHost.Pages.CheckOutModel
@{
    ViewData["Title"] = "تایید سبد خرید";
}

<main class="main-content">

    <!--== Start Page Header Area Wrapper ==-->
    <nav aria-label="breadcrumb" class="breadcrumb-style1">
        <div class="container">
            <ol class="breadcrumb justify-content-center">
                <li class="breadcrumb-item"><a asp-page="./Index">صفحه اصلی</a></li>
                <li class="breadcrumb-item active" aria-current="page">تایید سبد خرید</li>
            </ol>
        </div>
    </nav>
    <!--== End Page Header Area Wrapper ==-->
    <!--== Start Product Area Wrapper ==-->
    <section class="section-space">
        <div class="container">
            @if (ViewData["Message"] != null)
            {
                <div class="alert alert-danger">
                    @ViewData["Message"]
                </div>
            }
            <div class="shopping-cart-form table-responsive">
                @* <form method="post"> *@
                <table class="table text-center">
                    <thead class="bg-secondary">
                        <tr>
                            <th class="product-thumbnail">عکس</th>
                            <th class="product-name">محصول</th>
                            <th class="product-price">قیمت واحد</th>
                            <th class="product-quantity">تعداد</th>
                            <th class="product-quantity">مبلغ کل بدون تخفیف</th>
                            <th class="product-quantity">درصد تخفیف</th>
                            <th class="product-subtotal">مبلغ کل تخفیف</th>
                            <th class="product-subtotal">مبلغ پس از تخفیف</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Cart.Items)
                        {
                            <tr class="tbody-item">
                                <td class="product-thumbnail">
                                    <div class="thumb">
                                        <a href="single-product.html">
                                            <img src="~/uploads/@item.Picture" width="68" height="84" alt="@item.Name">
                                        </a>
                                    </div>
                                </td>
                                <td class="product-name">
                                    <span class="title">@item.Name</span>
                                </td>
                                <td class="product-price">
                                    <span class="price">@item.UnitPrice تومان</span>
                                </td>
                                <td class="product-quantity">
                                    <span class="price">@item.Count</span>
                                </td>
                                <td class="product-price">
                                    <span class="price">@item.TotalItemPrice.ToMoney() تومان</span>
                                </td>
                                <td class="product-price">
                                    <span class="price">@item.DiscountRate%</span>
                                </td>
                                <td class="product-subtotal border-bottom">
                                    <span class="price">@item.DiscountAmount.ToMoney() تومان</span>
                                </td>
                                <td class="product-subtotal border-bottom">
                                    <span class="price">@item.ItemPayAmount.ToMoney() تومان</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @* </form> *@
            </div>
            <div class="row">
                <div class="col-12 col-lg-6">
                    <div class="cart-totals-wrap">
                        <h2 class="title">مجموع سبد خرید</h2>
                        <table>
                            <tbody>
                                <tr class="cart-subtotal">
                                    <th>مبلغ نهایی</th>
                                    <td>
                                        <span class="amount fs-6">@Model.Cart.TotalAmount.ToMoney() تومان</span>
                                    </td>
                                </tr>
                                <tr class="cart-subtotal">
                                    <th>مبلغ تخفیف</th>
                                    <td>
                                        <span class="amount fs-6">@Model.Cart.DiscountAmount.ToMoney() تومان</span>
                                    </td>
                                </tr>
                                <tr class="order-total">
                                    <th>مبلغ قابل پرداخت</th>
                                    <td>
                                        <span class="amount">@Model.Cart.PayAmount.ToMoney() تومان</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="text-end">
                            <a class="checkout-button">پرداخت</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--== End Product Area Wrapper ==-->

</main>
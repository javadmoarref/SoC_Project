@page
@model ServiceHost.Pages.UpdateAccountModel
@{
    ViewData["Title"] = "ویرایش اطلاعات کاربری";
}

<main class="main-content">

    <!--== Start Page Header Area Wrapper ==-->
    <section class="page-header-area pt-10 pb-9" data-bg-color="#FFF3DA">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <div class="page-header-st3-content text-center text-md-start">
                        <ol class="breadcrumb justify-content-center justify-content-md-start">
                            <li class="breadcrumb-item"><a class="text-dark" asp-page="./Index">صفحه اصلی</a></li>
                            <li class="breadcrumb-item active text-dark" aria-current="page">ویرایش اطلاعات کاربری</li>
                        </ol>
                        <h2 class="page-header-title">ویرایش اطلاعات کاربری</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--== End Page Header Area Wrapper ==-->
    <!--== Start Account Area Wrapper ==-->
    <section class="section-space">
        <div class="container">
            @if (ViewData["Message"] != null)
            {
                <div class="alert alert-danger">
                    @ViewData["Message"]
                </div>
            }
            <div class="row mb-n8">
                <div class="col-lg-6 mb-8">
                    <!--== Start Register Area Wrapper ==-->
                    <div class="my-account-item-wrap">
                        <h3 class="title"> اطلاعات کاربری</h3>
                        <div class="my-account-form">
                            <form method="post" asp-page="/UpdateAccount">
                                <div class="form-group mb-6">
                                    <label>نام کامل <sup>*</sup></label>
                                    <input type="text" asp-for="@Model.Account.Fullname" readonly>
                                </div>
                                <div class="form-group mb-6">
                                    <label>موبایل <sup>*</sup></label>
                                    <input type="text" asp-for="@Model.Account.Mobile">
                                </div>
                                <div class="form-group mb-6">
                                    <label> کد پستی <sup>*</sup></label>
                                    <input type="text" asp-for="@Model.Account.PostalCode">
                                </div>
                                <div class="form-group mb-6">
                                    <label>آدرس <sup>*</sup></label>
                                    <input type="text" asp-for="@Model.Account.Address">
                                </div>
                                <input type="hidden" asp-for="@Model.Account.Id" value="@Model.Account.Id" />
                                <input type="hidden" asp-for="@Model.Account.RoleId" value="@Model.Account.RoleId" />
                                @* <input type="hidden" asp-for="@Model.Account.ProfilePhoto" value="@Model.Account.ProfilePhoto" /> *@
                                <div class="form-group">
                                    <button class="btn">ویرایش</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!--== End Register Area Wrapper ==-->
                </div>
            </div>
        </div>
    </section>
    <!--== End Account Area Wrapper ==-->

</main>
